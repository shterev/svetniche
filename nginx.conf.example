# Nginx configuration for SPA with client-side routing
# Place this in your nginx sites-available directory

server {
    listen 80;
    server_name svetniche.chepintsi.bg;
    
    root /var/www/svetniche/dist;
    index index.html;
    
    # Gzip compression
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;
    
    # Cache static assets
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
    
    # Handle client-side routing
    # All routes should serve index.html
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # Optional: Redirect HTTP to HTTPS
    # Uncomment after setting up SSL certificate
    # return 301 https://$server_name$request_uri;
}

